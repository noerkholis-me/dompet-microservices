generator client {
  provider = "prisma-client"
  output        = "../src/generated/prisma"
  moduleFormat = "cjs"
}

generator interfaces {
  provider = "prisma-generator-typescript-interfaces"
  output   = "../../../libs/contracts/src/generated/auth-services.types.ts"
  enumPrefix = "E"
  prettier    = true
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  password   String    
  status     Boolean   @default(true)  
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  roles      UserRole[]  

  @@map("users")
}

model UserRole {
  id        String   @id @default(uuid())
  userId    String
  role      RoleType

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, role])
  @@map("users_role")
}

enum RoleType {
  ADMIN
  PEMBELI
}