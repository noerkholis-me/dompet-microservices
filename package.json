{
  "name": "dompet-microservice",
  "version": "1.0.0",
  "private": true,
  "description": "Microservices-based e-wallet test project",
  "scripts": {
    "start:dev:api-gateway": "nest start api-gateway --watch",
    "start:dev:auth": "nest start auth-service --watch",
    "start:dev:rbac": "nest start rbac-service --watch",
    "start:dev:master": "nest start data-master-service --watch",
    "start:dev:transaction": "nest start transaction-service --watch",
    "build": "nest build api-gateway && nest build auth-service && nest build rbac-service && nest build data-master-service && nest build transaction-service",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "prisma:auth:generate": "prisma generate --schema apps/auth-service/prisma/schema.prisma",
    "prisma:auth:migrate": "cd apps/auth-service && npx prisma migrate dev",
    "prisma:auth:studio": "cd apps/auth-service && npx prisma studio",
    "prisma:auth:push": "cd apps/auth-service && npx prisma db push",
    "prisma:auth:seed": "cd apps/auth-service && npx prisma db seed",
    "prisma:master:generate": "prisma generate --schema apps/data-master-service/prisma/schema.prisma",
    "prisma:master:migrate": "cd apps/data-master-service && npx prisma migrate dev",
    "prisma:master:studio": "cd apps/data-master-service && npx prisma studio",
    "prisma:master:seed": "cd apps/data-master-service && npx prisma db seed",
    "prisma:transaction:generate": "prisma generate --schema apps/transaction-service/prisma/schema.prisma",
    "prisma:transaction:migrate": "cd apps/transaction-service && npx prisma migrate dev",
    "prisma:transaction:studio": "cd apps/transaction-service && npx prisma studio",
    "prisma:transaction:seed": "cd apps/transaction-service && npx prisma db seed",
    "prisma:generate:all": "npm run prisma:auth:generate && npm run prisma:master:generate && npm run prisma:transaction:generate",
    "prisma:migrate:all": "npm run prisma:auth:migrate && npm run prisma:master:migrate && npm run prisma:transaction:migrate",
    "prisma:seed:all": "npm run prisma:master:seed && npm run prisma:transaction:seed"
  },
  "dependencies": {
    "@liaoliaots/nestjs-redis": "^10.0.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bullmq": "^10.1.1",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/swagger": "^8.1.1",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "argon2": "^0.44.0",
    "bullmq": "^5.66.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cookie-parser": "^1.4.7",
    "ioredis": "^5.8.2",
    "nodemailer": "^7.0.12",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@golevelup/ts-jest": "^1.2.0",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@prisma/adapter-pg": "^7.2.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.12.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "prisma-generator-typescript-interfaces": "^3.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "apps/**/*.ts",
      "libs/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@common/(.*)$": "<rootDir>/libs/common/src/$1",
      "^@contracts/(.*)$": "<rootDir>/libs/contracts/src/$1"
    }
  }
}
